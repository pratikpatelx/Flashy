<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLogInText"
    tools:context=".presentation.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="198dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="FLASHY"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectedUser"
        android:layout_width="146dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profilePass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profiles"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.001" />

    <Button
        android:id="@+id/Enter"
        android:layout_width="131dp"
        android:layout_height="66dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/btn_default"
        android:text="Enter"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <EditText
        android:id="@+id/profilePass"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Enter"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.001" />

    <Button
        android:id="@+id/addProfile"
        android:layout_width="197dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@android:drawable/btn_default"
        android:text="Add Profile"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/profiles"
        app:layout_constraintTop_toBottomOf="@+id/profiles" />

    <Button
        android:id="@+id/deleteProfile"
        android:layout_width="197dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="104dp"
        android:background="@android:drawable/btn_default"
        android:text="Delete"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/addProfile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profiles"
        app:layout_constraintTop_toBottomOf="@+id/profiles"
        android:onClick="buttonAccountDeleteOnClick"/>

    <ListView
        android:id="@+id/profiles"
        android:layout_width="510dp"
        android:layout_height="551dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:background="@android:drawable/picture_frame"
        android:backgroundTint="@color/btn_deck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePass" />
</android.support.constraint.ConstraintLayout>